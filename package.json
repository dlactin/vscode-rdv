{
  "name": "vscode-rdv",
  "displayName": "RDV",
  "description": "Render and Diff for Kubernetes manifests",
  "version": "0.1.0",
  "publisher": "dlactin",
  "repository": "github.com/dlactin/vscode-rdv",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:rdv.diff"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "rdv",
      "properties": {
        "rdv.binaryPath": {
          "type": "string",
          "default": "rdv",
          "description": "Path to the rdv executable. (e.g. /usr/local/bin/rdv)"
        }
      }
    },
    "commands": [
      {
        "command": "rdv.diff",
        "title": "RDV: Render and Diff"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "rdv.diff",
          "group": "navigation",
          "when": "resourceLangId == yaml && resourceFilename =~ /^(values-.*|.*\\.values)\\.yaml$/"
        }
      ],
      "explorer/context": [
        {
          "command": "rdv.diff",
          "group": "navigation",
          "when": "resourceLangId == yaml && resourceFilename =~ /^(values-.*|.*\\.values)\\.yaml$/"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3",
    "@vscode/test-electron": "^2.3.2",
    "vsce": "^2.15.0"
  }
}